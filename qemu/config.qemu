#!/bin/bash

if [ -z $CPU ] ; then
  CPU=or1k
fi

if [ "$STATIC" ] ; then
  STATIC="--static"
fi

export CFLAGS="-Wno-maybe-uninitialized"

../configure --target-list="$CPU-linux-user $CPU-softmmu riscv64-softmmu" \
	--enable-fdt \
	--disable-kvm \
	--disable-xen \
	--disable-xkbcommon \
	--enable-debug-info $STATIC $@
